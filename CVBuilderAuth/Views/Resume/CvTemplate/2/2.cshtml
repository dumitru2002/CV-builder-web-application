@model CombinedViewModel
@{
    Layout = null;
}
<style>
   @@import url(//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css);
@@import url(//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap-theme.min.css);
@@import url(https://fonts.googleapis.com/css?family=Ubuntu);

body {
				  font-family: "Ubuntu", sans-serif;
				 
			}

article {
  margin-bottom: 30px;
}
			.img-responsive {
				  width: 150px;
				  height: 150px;
			}
			figcaption {
				  margin-top: 20px;
			}
			
			figcaption > h3 {
				  font-weight: bolder;
				  font-size: xx-large;
			}
			dt, dd {
				  margin-bottom: 5px;
			}
</style>

<head>
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->
</head>
<div class="container">
    <div class="row">
        <div class="col-lg-offset-2 col-lg-8">
            <section class="panel panel-default">
                <div class="panel-body">
                    <article class="panel-body">
                        <figure class="text-center">
                           
                            <figcaption>
                                <h3>@Model.UserCvInfoData.FirstOrDefault()?.FirstName @Model.UserCvInfoData.FirstOrDefault()?.LastName</h3>
                                <br> Tel. @Model.UserCvInfoData.FirstOrDefault()?.Phone E-mail: @Model.UserCvInfoData.FirstOrDefault()?.Email
                            </figcaption>
                        </figure>
                    </article>
                    <br>
                    <article>
                        <h4>
                            <strong>Personal Details</strong>
                        </h4>
                        <hr>
                        <dl class="dl-horizontal">
                            <dt>Date of Birth:</dt>
                            <dd>@Model.UserCvInfoData.FirstOrDefault()?.BirthDate</dd>
                            
                            <dt>About:</dt>
                            <dd>@Model.UserCvInfoData.FirstOrDefault()?.About</dd>
                        </dl>
                    </article>
                    <article>
                        <h4>
                            <strong>Edcucation</strong>
                        </h4>
                        <hr>
                        <dl class="dl-horizontal">
                            <dt>@Model.CvEducationData.FirstOrDefault()?.Type</dt>
                            <dd>@Model.CvEducationData.FirstOrDefault()?.Name</dd>
                        </dl>
                    </article>
                    <article>
                        <h4>
                            <strong>Languages</strong>
                        </h4>
                        <hr>
                        <dl class="dl-horizontal">
                            <dt>@Model.CvLanguageSkillData.FirstOrDefault()?.Language</dt>
                            <dd>@Model.CvLanguageSkillData.FirstOrDefault()?.Proficiency</dd>
                        </dl>
                    </article>
                    <article>
                        <h4>
                            <strong>Skills</strong>
                        </h4>
                        <hr>
                        <dl class="dl-horizontal">
                            
                            <dd>@Model.CvSkillsData.FirstOrDefault()?.Name - @Model.CvSkillsData.FirstOrDefault()?.Level</dd>
                            
                        </dl>
                    </article>
                    <article>
                        <h4>
                            <strong>Work Experiences</strong>
                        </h4>
                        <hr>
                        <dl class="dl-horizontal">
                            <dt>@Model.CvExperienceData.FirstOrDefault()?.StartDate->@Model.CvExperienceData.FirstOrDefault()?.EndDate</dt>
                            <dd>@Model.CvExperienceData.FirstOrDefault()?.Position - @Model.CvExperienceData.FirstOrDefault()?.Description</dd>
                            
                        </dl>
                        <hr>
                    </article>
                   
                   
                </div>
            </section>
        </div>
    </div>
</div>